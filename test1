// ConsoleApplication24.cpp: 定义控制台应用程序的入口点。
#include "stdafx.h"
#include<iostream>
#include <cstdio>
#include <cstdlib>
#include <windows.h>
int main()
{
	using namespace std;

	{
		std::cout << "Welcome to C++!\n";
		Sleep(5000);
		printf("Welcome to C++!\n");
	}

	int n = 1000;
	while (n != 100)
	{
		for (int i = 0; i <= 200; i++)
		{
			Sleep(3);
			printf(".......,/';\!@#$%^^&*()_+=-");
		}
		while (n != 100)
		for (int i = 100; i <= 200; i++)
		{
			Sleep(3);
			printf(".......,/';\!@#$%^^&*()_+=-");
		}
		system("cls");
	}
	return 0;
}
